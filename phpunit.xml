<?xml version="1.0" encoding="UTF-8" ?>
<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/8.0/phpunit.xsd"
        bootstrap="vendor/autoload.php"
        colors="true"
>
    <testsuite name="Primitives">
        <directory>./src/DCarbone/PHPFHIRGenerated/PHPFHIRTests</directory>
        <exclude>./src/DCarbone/PHPFHIRGenerated/PHPFHIRTests/FHIRElement</exclude>
        <exclude>./src/DCarbone/PHPFHIRGenerated/PHPFHIRTests/FHIRResource</exclude>
    </testsuite>
    <testsuite name="Elements">
        <directory>./src/DCarbone/PHPFHIRGenerated/PHPFHIRTests/FHIRElement</directory>
    </testsuite>
    <testsuite name="Resources">
        <directory>./src/DCarbone/PHPFHIRGenerated/PHPFHIRTests/FHIRResource</directory>
    </testsuite>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
